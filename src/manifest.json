{
  "name": "Podio Integration DevTools",
  "description": "DevTools for Podio Integration service traffic in WSUI",
  "version": "1.0",
  "manifest_version": 3,
  "author": "betty.diegel@citrix.com",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/img/podio16.png",
      "32": "/img/podio32.png",
      "48": "/img/podio48.png",
      "128": "/img/podio128.png"
    }
  },
  "icons": {
    "16": "/img/podio16.png",
    "32": "/img/podio32.png",
    "48": "/img/podio48.png",
    "128": "/img/podio128.png"
  },
  "devtools_page": "devtools.html"
}
